
<section>
    <div class="container">
      <h1 class="text-center">Your Orders</h1>
      <div class="row mt-4">
      
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile No</th>
      <th scope="col">Address</th>
      <th scope="col">Price</th>
      <th scope="col">Method Of Payment</th>
      <th scope="col">Status</th>
     
    </tr>
  </thead>
  <tbody>
      {{#each orders}}
    <tr>
      <td>{{this.Date}}</td>
      <td>{{this.SHIPPING.email}}</td>
       <td>{{this.SHIPPING.mobile}}</td>
      <td>{{this.SHIPPING.address}}</td>
      <td>{{this.totalprice}}</td>
       <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      
    <td><a href="/view-order-products/{{this._id}}" style="height:auto" class="btn btn-success">View Product</a></td>
    
    </tr>
  
    {{/each}}   
  </tbody>
</table>
    </div>
    
</section>


