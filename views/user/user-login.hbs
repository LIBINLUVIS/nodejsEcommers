<form method="post" action="/login">
<div class="container">
  <h1>Sign in</h1>
  {{#if loginErr}}
  <p class="error" >Invalid username or password</p>
  {{/if}}
    <div class="row">
        <div class="col-md-12 col-12">
         
    <div class="col m-2">
      <input type="email" name="Email" style="width: 50%;" class="form-control" placeholder="Email Id">
    </div>
    <div class="col m-2">
      <input type="password" style="width: 280px;" name="password" class="form-control" placeholder="Password">
    </div>

    <button class="btn btn-primary mt-2 ml-4">login</button>
    </div>
    </div>
</div>
</form>